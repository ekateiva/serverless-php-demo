{
    "name": "eimantas/aws-lambda-laravel",
    "require": {
        "php": "^7.2",
        "laravel-zero/framework": "5.8.*",
        "mnapoli/bref": "^0.3.6"
    },
    "require-dev": {
        "mockery/mockery": "^1.0",
        "phpunit/phpunit": "^7.5",
        "symfony/var-dumper": "^4.2"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "scripts": {
        "post-create-project-cmd": [
            "@php application app:rename"
        ],
        "lambda-build": [
            "@lambda-pack",
            "@lambda-deploy"
        ],
        "lambda-pack": "sam package --output-template-file .stack.yaml --s3-bucket eimantas-experiment-laravel-lambda",
        "lambda-deploy": "sam deploy --template-file .stack.yaml --capabilities CAPABILITY_IAM --stack-name eimantas-experiment-laravel-lambda"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "bin": ["shopify-products"]
}
